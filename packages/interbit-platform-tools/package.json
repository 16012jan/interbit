{
  "name": "interbit-platform-tools",
  "version": "0.4.53",
  "description": "Anything specific to platform deployment and pipelines, url sniffing",
  "main": "dist/interbit-platform-tools.js",
  "scripts": {
    "prepack": "npm run build",
    "build": "webpack --env dev && webpack --env build",
    "build:watch": "webpack --env dev && webpack --env build --watch",
    "dev": "webpack --progress --colors --watch --env dev",
    "test": "echo \"Error: no test specified\""
  },
  "author": "TSXV:BTL",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "7.1.2",
    "@babel/core": "7.1.0",
    "@babel/plugin-transform-runtime": "7.1.0",
    "@babel/preset-env": "7.1.0",
    "babel-loader": "8.0.4",
    "jest": "23.6.0",
    "should": "^13.2.1",
    "webpack": "4.19.1",
    "webpack-cli": "^3.1.2",
    "yargs": "^10.0.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
